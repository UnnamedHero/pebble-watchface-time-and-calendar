{
  "name": "time-and-calendar",
  "author": "Eugene 'EEM' Mikhaylov",
  "description": "Another inplementation of functional watchface with time, calendar and weather",
  "version": "0.41.0",
  "license": "GPLv3",
  "keywords": [
    "pebble watchface",
    "Time",
    "Calendar",
    "Weather"
  ],
  "scripts": {
    "build": "NODE_ENV=production babel src/js --out-dir src/pkjs"
  },
  "private": true,
  "dependencies": {
    "pebble-clay": "^1.0.4"
  },
  "pebble": {
    "displayName": "Time and Calendar",
    "uuid": "2c40726c-adac-4d55-8ed2-c114030aa0d6",
    "sdkVersion": "3",
    "enableMultiJS": true,
    "targetPlatforms": [
      "aplite",
      "basalt",
      "diorite",
      "emery"
    ],
    "capabilities": [
      "configurable",
      "location"
    ],
    "watchapp": {
      "watchface": true
    },
    "messageKeys": [
      "BackgroundColor",
      "FontColor",
      "ClockFormat",
      "DateFormat",
      "DateFormatSeparator",
      "SwitchBackTimeoutSeconds",
      "ConfigMarker",
      "JSReady",
      "VibrateDuringQuietTime",
      "QuietTime",
      "QuietTimeBegin[2]",
      "QuietTimeEnd[2]",
      "VibrateDuringCharged",
      "VibrateConnected",
      "VibrateConnectedType",
      "VibrateDisconnected",
      "VibrateDisconnectedType",
      "VibrateDuringCharging",
      "VibratePeriodic",
      "VibratePeriodicPeroid",
      "VibratePeriodicType",
      "ForecastQty",
      "ForecastTime",
      "ForecastTimeStamp[5]",
      "ForecastCondition[5]",
      "ForecastTemperature[5]",
      "ForecastType",
      "SwitchBackTimeout",
      "WeatherProvider",
      "WeatherUnits",
      "WeatherUpdatePeriod",
      "WeatherAPIKey",
      "WeatherMarker",
      "WeatherMarkerForecast",
      "WeatherTemperature",
      "WeatherCondition",
      "WeatherDesc",
      "WeatherHumidity",
      "WeatherPressure",
      "WeatherWindSpeed",
      "WeatherWindDirection",
      "WeatherTimeStamp",
      "WeatherSunrise",
      "WeatherSunset",
      "WeatherError",
      "NP_WeatherLocationType",
      "SundayFirst",
      "CalendarWeeks",
      "CalendarWeekDayMark[2]",
      "CalendarDayMark[2]",
      "CalendarSmallOtherDays",
      "NP_CityID",
      "TimeFont",
      "PebbleShakeAction",
      "ShakeTwice",
      "dummy"
    ],
    "resources": {
      "media": [
        {
          "menuIcon": true,
          "type": "png",
          "name": "IMAGE_MENU_ICON",
          "file": "images/tc.png"
        },
        {
          "type": "font",
          "name": "CLIMACONS_36",
          "file": "fonts/Climacons-Font_mod.ttf"
        },
        {
          "type": "font",
          "name": "CLIMACONS_42",
          "file": "fonts/Climacons-Font_mod.ttf"
        },
        {
          "type": "font",
          "name": "CLIMACONS_26",
          "file": "fonts/Climacons-Font_mod.ttf"
        },
        {
          "characterRegex": "[:0-9]",
          "type": "font",
          "name": "TIME_BOLD_58",
          "file": "fonts/BebasNeue_Bold.ttf"
        },
        {
          "characterRegex": "[:0-9]",
          "type": "font",
          "name": "TIME_SECS_BOLD_44",
          "file": "fonts/BebasNeue_Bold.ttf"
        },
        {
          "characterRegex": "[:0-9]",
          "type": "font",
          "name": "DIGITAL_SECS_BOLD_42",
          "file": "fonts/digital-7.ttf"
        },
        {
          "characterRegex": "[:0-9]",
          "type": "font",
          "name": "DIGITAL_BOLD_46",
          "file": "fonts/digital-7.ttf"
        },
        {
          "type": "font",
          "name": "STATUSES_18",
          "file": "fonts/statuses.ttf"
        },
        {
          "type": "raw",
          "name": "LOCALE_ENGLISH",
          "file": "locale/locale_en.bin"
        },
        {
          "type": "raw",
          "name": "LOCALE_RUSSIAN",
          "file": "locale/locale_ru.bin"
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.14.0"
  }
}
